<%= form_with(model: board, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :body %>
   <%= form.text_area :body, class:'form-control', rows:'10' %>
  </div>
  <%= form.submit t('boards.new.register'), class:'btn btn-primary' %>
<% end %>

<ul class='crud-menu-btn list-inline float-right'>
  <li class="list-inline-item">
    <%= link_to edit_board_path, id: "button-edit-#{board.id}" do %>
      <%= icon 'fa', 'pen' %>
    <% end %>
  </li>
  <li class="list-inline-item">
    <%= link_to board_path, method: :delete, id: "button-delete-#{board.id}", data: {confirm: t('defaults.confirm.delete', item: Board.model_name.human)} do %>
      <%= icon 'fas', 'trash' %>
    <% end %>
  </li>
</ul>

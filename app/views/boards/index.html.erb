<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= render partial:'search_form', locals:{ q: @q, url: boards_path } %>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @boards.present? %>
          <% Board.topics_i18n.each do |topic| %>
            <% if @boards.where(topic:topic).present? %>
              <div class="col-12">
                  <h2><%= topic[1] %></h2>
              </div>
              <%=  render @boards.where(topic: topic) %>
            <% end %>
          <% end %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row" >
    <div class="col-12">
      <%= paginate @boards %>
    </div>
  </div>
</div>

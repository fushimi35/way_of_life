<div class='mr10 float-right'>
	<%= link_to edit_board_path(board), id: 'button-edit-#{board.id}' do %>
		<%= icon 'fa', 'pen' %>
	<% end %>
	<%= link_to board_path(board), id: 'button-delete-#{board.id}', method: :delete, data: {confirm: t('defaults.confirm.delete', item: Board.model_name.human)} do %>
		<%= icon 'fas', 'trash' %>
	<% end %>
</div>

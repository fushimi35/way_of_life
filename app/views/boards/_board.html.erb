<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-1">
    <div class="card">
      <div class="card-body">
        <ul class="list-inline">
          <li class="list-inline-item"><%= board.user.now.decorate.description %></li>
        </ul>
        <h4 class="card-title d-inline">
          <%= link_to board.title, board_path(board) %>
        </h4>
        <% if current_user&.own?(board) %>
          <%= render 'crud_menus', board: board %>
        <% else %>
          <%= render 'bookmark_button', board: board %>
        <% end %>
        <ul class="list-inline">
          <li class="list-inline-item"><i class="far fa-user"></i><%= board.user.nickname %></li>
          <li class="list-inline-item"><i class="far fa-calendar"></i><%= l board.created_at, format: :long %></li>
        </ul>
        <p class="card-text"><%= board.body %></p>
      </div>
    </div>
  </div>
</div>


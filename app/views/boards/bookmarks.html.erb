<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <% p @q %>
      <%= render partial:'search', locals:{ q:@q, url:bookmarks_boards_path } %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @bookmarks.present? %>
          <%= render @bookmarks %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= paginate @bookmarks %>
    </div>
  </div>
</div>
